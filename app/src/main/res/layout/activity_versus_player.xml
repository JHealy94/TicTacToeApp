<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VersusPlayer">

    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reset_button" android:layout_centerHorizontal="true"
            android:layout_below="@id/TicTacToeBoard" android:layout_marginTop="14dp"/>
    <TextView
            android:text="X: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/xWins"
            android:layout_above="@+id/TicTacToeBoard" android:textSize="24sp" android:layout_marginBottom="12dp"
            android:layout_marginLeft="14dp"/>
    <TextView
            android:text="O: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/oWins"
            android:layout_above="@+id/TicTacToeBoard" android:textSize="24sp" android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp" android:layout_marginRight="14dp"/>
    <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:columnCount="3" android:id="@+id/TicTacToeBoard" android:layout_centerInParent="true">
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_1" android:layout_row="0"
                android:layout_column="0" android:textSize="24sp" android:tag="0"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_2" android:layout_row="0"
                android:layout_column="1" android:textSize="24sp" android:tag="1"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_3" android:layout_row="0"
                android:layout_column="2" android:textSize="24sp" android:tag="2"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_4" android:layout_row="1"
                android:layout_column="0" android:textSize="24sp" android:tag="3"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_5" android:layout_row="1"
                android:layout_column="1" android:textSize="24sp" android:tag="4"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_6" android:layout_row="1"
                android:layout_column="2" android:textSize="24sp" android:tag="5"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_7" android:layout_row="2"
                android:layout_column="0" android:textSize="24sp" android:tag="6"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_8" android:layout_row="2"
                android:layout_column="1" android:textSize="24sp" android:tag="7"/>
        <Button
                android:layout_width="112dp"
                android:layout_height="102dp" android:id="@+id/button_9" android:layout_row="2"
                android:layout_column="2" android:textSize="24sp" android:tag="8"/>
    </GridLayout>

</RelativeLayout>